<p id="notice"><%= notice %></p>

<h1>Listing Nutritions</h1>

<table>
  <thead>
    <tr>
      <th>Nutrition</th>
      <th>Calories</th>
      <th>Protein</th>
      <th>Carbohydrates</th>
      <th>Fat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nutritions.each do |nutrition| %>
      <tr>
        <td><%= nutrition.nutrition_id %></td>
        <td><%= nutrition.calories %></td>
        <td><%= nutrition.protein %></td>
        <td><%= nutrition.carbohydrates %></td>
        <td><%= nutrition.fat %></td>
        <td><%= link_to 'Show', nutrition %></td>
        <td><%= link_to 'Edit', edit_nutrition_path(nutrition) %></td>
        <td><%= link_to 'Destroy', nutrition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

