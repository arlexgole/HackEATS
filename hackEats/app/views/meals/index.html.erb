<p id="notice"><%= notice %></p>

<h1>Listing Meals</h1>

<table>
  <thead>
    <tr>
      <th>Meal</th>
      <th>Total calories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.meal_id %></td>
        <td><%= meal.total_calories %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

